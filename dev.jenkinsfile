pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                checkout scm
            }
        }
        stage('Build image') {
            steps {
                script {
                    echo 'building image'
                    app = docker.build("medch1/simpleapp", " .")
                }
            }
        }
        stage('Snyk') {
            steps {
                withCredentials([string(credentialsId: 'snyk_token_secret', variable: 'SNYK_TOKEN')]) {
                    sh 'snyk auth $SNYK_TOKEN'
                }
                sh 'snyk test'
            }
        }
    }
}

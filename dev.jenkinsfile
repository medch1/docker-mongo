pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                checkout scm
            }
        }
        stage('Build image') {
            steps {
                script {
                    echo 'building image'
                    app = docker.build("medch1/simpleapp", " .")
                }
            }
        }
        stage('Snyk') {
            dir('sources') {
                steps {
                    withCredentials([string(credentialsId: 'snyk_secret_token', variable: 'SNYK_TOKEN')]) {
                        sh 'snyk auth $SNYK_TOKEN'
                    }
                    sh 'snyk test'
                }
            }
        }
    }
}

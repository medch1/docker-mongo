def gv
pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker_hub')
        DISCORD_WEBHOOK = credentials('DISCORD_WEBHOOK')
    }
    stages {
        stage ("Init") {
            steps {
                gv = load "script.groovy"
            }
        }

        stage ("Build") {
            steps {
                script{
                    gv.job("Test")
                    }
                }
        }
        stage ("Test") {
            steps {
                script{
                    gv.job("Test")
                }
            }
        }
        stage ("Deploy") {
            steps {
                script{
                   gv.job("Test")
                        }
            }
        }
        stage ("Build docker image"){
            steps {
                script{
                    gv.job("Test")
                    sh 'docker build -t medch1/simpleapp .'
                        }

            }
        }
        stage ("Push Docker image"){
            steps {
                script{
                    gv.job("Push ")
				    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                    sh 'docker push medch1/simpleapp '
                }
            }
        }
        stage ("Notify Discord"){
            steps  {
                discordSend description: currentBuild.currentResult +" \n Build: " +env.BUILD_NUMBER +"" , footer: '', image: '', link: env.BUILD_URL, result: currentBuild.currentResult, scmWebUrl: '', thumbnail: '', title: env.JOB_NAME , webhookURL: DISCORD_WEBHOOK

            }
        }
    }
}




//checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'gitHub', url: 'https://github.com/medch1/docker-mongo.git']]])


pipeline {
    agent any
    stages {
        stage ("Build") {
            steps {
                echo 'Starting Build ...'
                }
        }
        stage ("Test") {
            steps {
                echo 'Starting Test ...'
            }
        }
        stage ("Deploy") {
            steps {
                echo 'Starting Deploy ...'
            }
        }
        stage ("Build docker image"){
            steps {
                 sh 'docker build -t medch1/simpleapp .'
            }
        }
    }
}




